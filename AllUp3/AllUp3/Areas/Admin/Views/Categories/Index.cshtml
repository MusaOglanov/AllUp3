@model List<Category>

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="card-header">Categories</h5>
                <a asp-action="Create" class="btn rounded-pill btn-primary text-white " style="margin-right:20px">Create</a>
            </div>
            <div class="card-body">
                <div class="table-responsive text-nowrap">
                    <table id="myTable" class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th>Name</th>
                                <th>Is Main</th>
                                <th>Children</th>
                                <th>Parent</th>
                                <th>Status</th>
                                <th style="text-align:right">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Category item in Model)
                            {
                                <tr>
                                    <td>
                                        @if (item.IsMain)
                                        {
                                            <img src="~/assets/images/@item.Image" style="width:80px;height:80px;object-fit:cover" />

                                        }
                                        else
                                        {
                                            <div>NULL</div>
                                        }
                                    </td>
                                    <td>
                                        @item.Name

                                    </td>
                                    <td>
                                        @if (item.IsMain)
                                        {
                                            <div>Main</div>
                                        }
                                        else
                                        {
                                            <div>Main</div>

                                        }
                                    </td>

                                    <td>

                                        @if (item.IsMain)
                                        {
                                            @foreach (Category child in item.Children)
                                            {
                                                <div>@child.Name</div>

                                            }
                                            <div>@item.Parent?.Name</div>

                                        }
                                        else
                                        {
                                            <div>Null</div>


                                        }
                                    </td>
                                    <td>
                                        @if (item.IsMain)
                                        {
                                            <div>Null</div>
                                        }
                                        else
                                        {
                                            <div>@item.Parent?.Name</div>

                                        }
                                    </td>



                                    @*<td>@item.Description</td>*@
                                    <td>
                                        @if (item.IsDeactive)
                                        {
                                            <span class="text-danger">Passiv</span>
                                        }
                                        else
                                        {
                                            <span class="text-success">Active</span>
                                        }
                                    </td>
                                    <td>

                                        <div class="d-flex justify-content-end">
                                            @*                                            <a asp-action="Detail" asp-route-id="@item.Id" class="btn rounded-pill btn-warning text-white" style="margin-right:5px">Detail</a>
                                        *@                                            <a asp-action="Update" asp-route-id="@item.Id" class="btn rounded-pill  btn-info text-white" style="margin-right:5px">Update</a>
                                            @if (item.IsDeactive)
                                            {
                                                <a asp-action="Activity" asp-route-id="@item.Id" class="btn rounded-pill  btn-success text-white" style="margin-right:5px;width:120px">Activate</a>
                                            }
                                            else
                                            {
                                                <a asp-action="Activity" asp-route-id="@item.Id" class="btn rounded-pill  btn-danger text-white" style="margin-right:5px;width:120px">DeActivate</a>

                                            }
                                        </div>
                                    </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>